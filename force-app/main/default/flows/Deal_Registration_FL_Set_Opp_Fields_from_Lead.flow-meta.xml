        <locationY>398</locationY>
        <assignNullValuesIfNoRecordsFound>true</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Check_Country_List_Lookup</targetReference>
        </connector>
        <filters>
            <field>ISO_Code__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>Lead_Record_lkp.CountryCode</elementReference>
            </value>
        </filters>
        <object>Country_List__c</object>
        <outputReference>Country_List_Record</outputReference>
        <queriedFields>Id</queriedFields>
    </recordLookups>
    <recordUpdates>
