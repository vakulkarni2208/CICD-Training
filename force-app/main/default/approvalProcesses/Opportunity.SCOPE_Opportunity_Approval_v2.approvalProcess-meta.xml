            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Used to secure approval for NALA SCOPE Requests under 1000 quantity</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Total_GPU_Quantities__c</field>
                <operation>lessThan</operation>
                <value>500</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Region__c</field>
