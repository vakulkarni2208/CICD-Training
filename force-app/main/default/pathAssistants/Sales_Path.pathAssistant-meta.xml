<?xml version="1.0" encoding="UTF-8"?>
<PathAssistant xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <entityName>Opportunity</entityName>
    <fieldName>StageName</fieldName>
    <masterLabel>Sales Path</masterLabel>
    <pathAssistantSteps>
        <fieldNames>Closed_Lost_Reason__c</fieldNames>
        <fieldNames>DGX_Lost_Details__c</fieldNames>
        <fieldNames>Closed_Comments__c</fieldNames>
        <fieldNames>Duplicate_Opportunity_Number__c</fieldNames>
        <info>&lt;p&gt;Please provide some details as to why this deal was lost. This will help the entire team get better together.&lt;/p&gt;</info>
        <picklistValueName>Closed Lost</picklistValueName>
    </pathAssistantSteps>
    <pathAssistantSteps>
        <fieldNames>CloseDate</fieldNames>
        <picklistValueName>Closed Won</picklistValueName>
    </pathAssistantSteps>
    <pathAssistantSteps>
        <fieldNames>Competition__c</fieldNames>
        <fieldNames>NextStep</fieldNames>
        <info>&lt;p&gt;In this stage please note competition details if any and information about the customer budget is required. &lt;b&gt;Please also make sure that your customer account is approved before moving to Proposal/Price Quote stage.&lt;/b&gt;&lt;/p&gt;</info>
        <picklistValueName>Needs Analysis</picklistValueName>
    </pathAssistantSteps>
    <pathAssistantSteps>
        <fieldNames>OEM_ODM_Disti_Status__c</fieldNames>
        <fieldNames>Prefered_Partner__c</fieldNames>
        <fieldNames>NPN_Solution_Provider_VAR__c</fieldNames>
        <fieldNames>NextStep</fieldNames>
        <picklistValueName>Negotiation/Review</picklistValueName>
    </pathAssistantSteps>
    <pathAssistantSteps>
        <fieldNames>CloseDate</fieldNames>
        <fieldNames>Closed_Won_Reason__c</fieldNames>
        <fieldNames>Primary_Customer_Use_Case__c</fieldNames>
        <info>&lt;p&gt;Before finalizing this deal please confirm the products, prices, quantities, OEM and Customer Use Case details are correct. Congratulations on the win!&lt;/p&gt;</info>
        <picklistValueName>Paperwork Finalization</picklistValueName>
    </pathAssistantSteps>
    <pathAssistantSteps>
        <fieldNames>OEM_ODM_Disti_Status__c</fieldNames>
        <fieldNames>Prefered_Partner__c</fieldNames>
        <fieldNames>CloseDate</fieldNames>
        <fieldNames>NextStep</fieldNames>
        <info>&lt;p&gt;In this stage please confirm OEM information and VAR/Disti information if any. Please also update your Next Step information.&lt;/p&gt;</info>
        <picklistValueName>Proposal/Price Quote</picklistValueName>
    </pathAssistantSteps>
    <pathAssistantSteps>
        <fieldNames>Name</fieldNames>
        <fieldNames>AccountId</fieldNames>
        <fieldNames>Amount</fieldNames>
        <fieldNames>CloseDate</fieldNames>
        <fieldNames>NextStep</fieldNames>
        <info>&lt;p&gt;All Opportunities must start in stage Prospecting. Please make sure to schedule a follow up activity or two to try and get to stage Qualification. &lt;b&gt;Only basic field details are required at this stage but you must add a Product to progress to the next Stage (&lt;/b&gt;&lt;a href=&quot;https://www.brainshark.com/nvidia/OR_3_AddingProducts?nodesktopflash=1&quot; target=&quot;_blank&quot;&gt;&lt;b&gt;training available here&lt;/b&gt;&lt;/a&gt;&lt;b&gt;). Opportunities at stage Prospecting will not be included in your Enterprise forecast.&lt;/b&gt;&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;&lt;b&gt;Opportunity Name should include &amp;#39;Account Name - Project Name - Product Name&amp;#39;&lt;/b&gt;&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;&lt;a href=&quot;https://www.brainshark.com/nvidia/Creating_Managing_Opps?nodesktopflash=1&quot; target=&quot;_blank&quot;&gt;&lt;b&gt;Please reference this training here&lt;/b&gt;&lt;/a&gt;&lt;b&gt; if you need any help with managing Opportunities&lt;/b&gt;&lt;/p&gt;</info>
        <picklistValueName>Prospecting</picklistValueName>
    </pathAssistantSteps>
    <pathAssistantSteps>
        <fieldNames>AccountId</fieldNames>
        <fieldNames>DR_Customer_Contact__c</fieldNames>
        <fieldNames>Primary_Contact_Role__c</fieldNames>
        <fieldNames>NextStep</fieldNames>
        <info>&lt;p&gt;In this Stage please note the customer contact you are working with and provide information about the demo or samples provided to customer at this point.&lt;b&gt; In this and every stage please make sure to update Next Step details.&lt;/b&gt;&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;&lt;a href=&quot;https://www.brainshark.com/nvidia/Creating_Managing_Opps?nodesktopflash=1&quot; target=&quot;_blank&quot;&gt;Please reference this training here&lt;/a&gt; if you need any help with managing Opportunities&lt;/p&gt;</info>
        <picklistValueName>Qualification</picklistValueName>
    </pathAssistantSteps>
    <recordTypeName>Enterprise_Sales_Opportunity</recordTypeName>
</PathAssistant>
