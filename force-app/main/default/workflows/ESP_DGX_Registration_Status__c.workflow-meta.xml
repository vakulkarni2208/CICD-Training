<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Notify_Internal_Team_About_Failed_Registration</fullName>
        <description>Notify Internal Team About Failed Registration</description>
        <protected>false</protected>
        <recipients>
            <recipient>akhileshg@nvidia.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>ecabaluna@nvidia.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>nkohir@nvidia.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>pjena@nvidia.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>simony@nvidia.com</recipient>
            <type>user</type>
        </recipients>
        <senderAddress>nvsupport@nvidia.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Service_Cloud_ESP_Community_User_Email/ESP_DGX_Registration_Failure_Internal_Message</template>
    </alerts>
    <alerts>
        <fullName>Notify_customer_about_failed_registration</fullName>
        <description>Notify customer about failed registration</description>
        <protected>false</protected>
        <recipients>
            <field>Email__c</field>
            <type>email</type>
        </recipients>
        <senderAddress>nvsupport@nvidia.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Service_Cloud_ESP_Community_User_Email/ESP_DGX_Registration</template>
    </alerts>
    <rules>
        <fullName>ESP DGX Registration Messaging</fullName>
        <actions>
            <name>Notify_Internal_Team_About_Failed_Registration</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>Notify_customer_about_failed_registration</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>ESP_DGX_Registration_Status__c.Registration_Status__c</field>
            <operation>equals</operation>
            <value>Failure</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
