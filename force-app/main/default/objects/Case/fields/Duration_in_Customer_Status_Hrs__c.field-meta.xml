<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Duration_in_Customer_Status_Hrs__c</fullName>
    <description>This field shows how many hours Case is in current status.</description>
    <externalId>false</externalId>
    <formula>IF( IsClosed, NULL, (NOW()-Last_Status_Date_Time__c)*24)</formula>
    <label>Duration in Customer Status (Hrs)</label>
    <precision>18</precision>
    <required>false</required>
    <scale>0</scale>
    <trackHistory>false</trackHistory>
    <type>Number</type>
    <unique>false</unique>
</CustomField>
