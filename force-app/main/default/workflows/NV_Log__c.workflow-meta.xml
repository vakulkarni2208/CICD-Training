        <description>Licensing Error Notification</description>
        <protected>false</protected>
        <recipients>
            <recipient>jrando@nvidia.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>messayas@nvidia.com.crp</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>mytrang@nvidia.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>talicaya@nvidia.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>vgattamaneni@nvidia.com</recipient>
            <type>user</type>
        </recipients>
        <senderAddress>no_reply@nvidia.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>All_Templates/Error_Notification</template>
    </alerts>
    <alerts>
        <fullName>Licensing_Logs_for_Hypercare</fullName>
        <ccEmails>vgattamaneni@nvidia.com</ccEmails>
        <description>Licensing Logs for Hypercare</description>
        <protected>false</protected>
        <recipients>
            <recipient>vgattamaneni@nvidia.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>All_Templates/Error_Notification</template>
    </alerts>
    <alerts>
        <fullName>Service_Cloud_NV_Log_Email_alert</fullName>
        <description>Service Cloud: NV Log Email alert</description>
        <protected>false</protected>
        <recipients>
            <field>Additional_Email__c</field>
            <type>email</type>
        </recipients>
        <recipients>
            <recipient>akhileshg@nvidia.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>pjena@nvidia.com</recipient>
            <type>user</type>
        </recipients>
        <senderAddress>no_reply@nvidia.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Dev_Support_Email_Templates/NV_Log_Email_Template</template>
    </alerts>
    <rules>
        <fullName>CustomerMasterErrorNotification</fullName>
        <actions>
            <name>Licensing_Error_Notification</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>NV_Log__c.Response__c</field>
            <operation>contains</operation>
            <value>Error:1036</value>
        </criteriaItems>
        <description>CustomerMasterErrorNotification</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>NV_log_notifications_Licensinig_Hypercare</fullName>
        <actions>
            <name>Licensing_Logs_for_Hypercare</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <booleanFilter>1 AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>NV_Log__c.Status__c</field>
            <operation>equals</operation>
            <value>Error,Exception</value>
        </criteriaItems>
        <criteriaItems>
            <field>NV_Log__c.Functionality_Name__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <criteriaItems>
            <field>NV_Log__c.WebServiceName__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>CustomerMasterErrorNotification</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
