<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Email</field>
        <field>Company</field>
        <field>Description</field>
        <field>Industry</field>
        <field>DR_Program_Name__c</field>
        <field>DR_Deal_Type__c</field>
        <field>DR_Product__c</field>
        <field>DR_SKU_Quantity__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>NPNPD_Approved_Date_PBM_Now</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>NPNPD_Is_Approved_By_PBM_T</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>DR_ChannelAdmin__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Channel Admin for the Lead is set from Process Builder based on the Lead Region
RTX6000 : DR : Settings</description>
        <label>Channel Admin</label>
        <name>Channel_Admin</name>
        <rejectionActions>
            <action>
                <name>NPNPD_Denied_Date_PBM_Now</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>NPNPD_Is_Denied_By_PBM_T</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>SDS-2727-New Lead form, RTX6k Active Upsell Program
Approval  process for Channel Admin only - Follows the same exact approval process like Edu Leads with new set of Email templates</description>
    <emailTemplate>Deal_Registration/X1_RTX6000_Refresh_Promotion_Deal_Submitted_Email_To_NVIDIA</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Lead.RecordType</field>
            <operation>equals</operation>
            <value>RTX6000 Refresh Promotion</value>
        </criteriaItems>
        <criteriaItems>
            <field>Lead.DR_Is_Submitted__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>DR_Approved_Date_Now</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DR_Is_Approved_T</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DR_Lead_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>X2_RTX6000_Refresh_Promotion_Deal_Approved_Email_To_Partner</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>DR_Denied_Date_Now</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DR_Is_Denied_T</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DR_Lead_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>X2_RTX6000_Refresh_Promotion_Deal_Rejected_Email_To_Partner</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>DR_Is_Submitted_T</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DR_Lead_Status_In_Review</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DR_Submitted_Date_Now</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>X1_RTX6000_Refresh_Promotion_Deal_Submitted_Email_To_Partner</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>RTX6000 Refresh Promotion</label>
    <processOrder>5</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
