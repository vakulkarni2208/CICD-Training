<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>ssomei@nvidia.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Account</field>
        <field>DR_Expiration_Date__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>cweinstein@nvidia.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Regional Sales Manager Approval - NALA</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Region__c</field>
                <operation>equals</operation>
                <value>NALA</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Sales Manager Approval (NALA)</label>
        <name>Sales_Manager_Approval_NALA</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>amanhart@nvidia.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Regional Sales Manager Approval - EMEA</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Region__c</field>
                <operation>equals</operation>
                <value>EMEA</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Sales Manager Approval (EMEA)</label>
        <name>Sales_Manager_Approval_EMEA</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>ashokp66@nvidia.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Regional Sales Manager Approval - APAC</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Region__c</field>
                <operation>equals</operation>
                <value>APAC</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Sales Manager Approval (APAC)</label>
        <name>Sales_Manager_Approval_APAC</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>hiwanaga@nvidia.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Regional Sales Manager Approval - JAPAN</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Region__c</field>
                <operation>equals</operation>
                <value>JAPAN</value>
            </criteriaItems>
        </entryCriteria>
        <label>Sales Manager Approval (JAPAN)</label>
        <name>Sales_Manager_Approval_JAPAN</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Opportunity Registration : 180 days Extension Approval by Regional Sales</description>
    <emailTemplate>Deal_Registration/DR_180Days_Registration_Extension_Request</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4 AND 5 AND 6</booleanFilter>
        <criteriaItems>
            <field>Opportunity.RecordType</field>
            <operation>equals</operation>
            <value>Enterprise Sales Opportunity</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.IsClosed</field>
            <operation>notEqual</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.DR_Deal_Status__c</field>
            <operation>equals</operation>
            <value>Extension Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Type</field>
            <operation>equals</operation>
            <value>Deal Registration</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.DR_Is_Submitted_For_180Days_Extn__c</field>
            <operation>notEqual</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Region__c</field>
            <operation>equals</operation>
            <value>APAC,NALA,JAPAN,EMEA</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>DR_180Days_Extn_Approved_Date_Now</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DR_180Days_Extn_Update_Exp_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DR_180Days_Registration_Extension_Approved_Email_To_Owner</name>
            <type>Alert</type>
        </action>
        <action>
            <name>DR_Is_180Days_Extn_Approved_T</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>DR_180Days_Extn_Rejected_Date_Now</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DR_180Days_Registration_Extension_Rejected_Email_To_Owner</name>
            <type>Alert</type>
        </action>
        <action>
            <name>DR_Is_180Days_Extn_Rejected_T</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>DR_180Days_Exten_Request_Acknowledge_to_Owner</name>
            <type>Alert</type>
        </action>
        <action>
            <name>DR_180Days_Extn_Submission_Date_Now</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DR_Is_Submitted_For_180Days_Extn_T</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>180Days Opp Reg Extension</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>DR_180Days_Extn_Submission_Date_Nul</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DR_Is_Submitted_For_180Days_Extn_F</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
