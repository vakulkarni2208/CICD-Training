<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <decisions>
        <name>Check_Country_List_Lookup</name>
        <label>Check Country List Lookup</label>
        <locationX>314</locationX>
        <locationY>518</locationY>
        <defaultConnectorLabel>[Default Outcome]</defaultConnectorLabel>
        <rules>
            <name>If_Country_List_Lookup_is_NON_BLANK</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Country_List_Record</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Opportunity_NameDescriptionAndInstallationLocation</targetReference>
            </connector>
            <label>If Country List Lookup is NON-BLANK</label>
        </rules>
        <rules>
            <name>If_Country_List_Lookup_is_BLANK</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Country_List_Record</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Opportunity_NameAndDescription</targetReference>
            </connector>
            <label>If Country List Lookup is BLANK</label>
        </rules>
    </decisions>
    <decisions>
        <name>Check_if_CountryCode_is_Not_Null</name>
        <label>Check if CountryCode is Not Null</label>
        <locationX>578</locationX>
        <locationY>278</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Lead_CountryCode_is_not_null</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Lead_Record_lkp.CountryCode</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Country_List_Record_lkp</targetReference>
            </connector>
            <label>Lead CountryCode is not null</label>
        </rules>
    </decisions>
    <description>Deal Registration : Set Opp Fields (Name, Description, Industry Installation Location)</description>
    <formulas>
        <description>Value derived from Custom Settings (DR_Settings: Lead Type)</description>
        <name>LeadType_Deal_Registration</name>
        <dataType>String</dataType>
        <expression>{!$Setup.DR_Settings__c.Lead_Type__c}</expression>
    </formulas>
    <interviewLabel>Deal Registration : FL : Set Opp Fields from Lead {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Deal Registration : FL : Set Opp Fields from Lead</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <name>Converted_Lead_from_Deal_Registation</name>
        <label>Converted Lead (from Deal Registation)</label>
        <locationX>578</locationX>
        <locationY>158</locationY>
        <assignNullValuesIfNoRecordsFound>true</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Check_if_CountryCode_is_Not_Null</targetReference>
        </connector>
        <filters>
            <field>DR_Lead_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>LeadType_Deal_Registration</elementReference>
            </value>
        </filters>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>Lead_Id_For_Opportunity</elementReference>
            </value>
        </filters>
        <object>Lead</object>
        <outputReference>Lead_Record_lkp</outputReference>
        <queriedFields>Description</queriedFields>
        <queriedFields>DR_Opportunity_Name__c</queriedFields>
        <queriedFields>CountryCode</queriedFields>
        <queriedFields>Industry</queriedFields>
        <queriedFields>DR_Registration_Close_Date__c</queriedFields>
    </recordLookups>
    <recordLookups>
        <name>Country_List_Record_lkp</name>
